<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicapp.RecommendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/iconback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="#E0E0E0"
                android:src="@drawable/arrow_left" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iconback"
                android:layout_alignTop="@id/iconback"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/iconback"
                android:background="#E0E0E0"
                android:hint="Pesquisar ..."
                android:inputType="textCapWords"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/linkinpark" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/imaginedragons" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/twodoors" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/coutingcrows" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>
